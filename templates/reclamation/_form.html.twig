
{% block body %}
    <body>

    {% block titre %}
        <section id="appointment" class="appointment section-bg">
            <div class="container" data-aos="fade-up">
                <div class="titreviolet">
                    <h2>Nouvelle r√©clamation</h2>
                </div>
            </div>
        </section>
    {% endblock %}
    <div class="container">
        <div class="form">

            {{ form_start(form,{
                'attr': {
                    'novalidate': 'novalidate',

                }
            }
            ) }}

            <div class="form-group">
                <label class="col-sm-3 form-control-label">Commentaire</label>
                {{ form_row(form.commentaire) }}
                {{ form_errors(form.commentaire) }}
            </div>
            <div>

                <div class="form-group">
                    <label class="col-sm-3 form-control-label">type</label>
                    {{ form_widget(form.type) }}
                    {{ form_errors(form.type) }}
                </div>
                <div class="form-group">
                    <label class="col-sm-3 form-control-label">Etat</label>
                    {{ form_widget(form.etat) }}
                    {{ form_errors(form.etat) }}
                </div>

                <div class="form-group">
                    <label class="col-sm-3 form-control-label">utilisateur</label>
                    {{ form_widget(form.user) }}
                    {{ form_errors(form.user) }}
                </div>
                



                <div class="form-group">
                    <button class="btn btn-lg btn-primary">{{ button_label|default('Ajouter') }}</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
    </body>
{% endblock %}